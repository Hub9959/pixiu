<% @title='Forgot your password?' %>

<%= bootstrap_form(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.error_messages %>
    <%= f.fieldset do %>
        <%= f.legend(@title) %>

        <%= f.group do %>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true %>
        <% end %>

        <%= f.button_group do %>
            <%= f.submit 'Send me reset password instructions' %>
            <%= render 'devise/shared/links' %>
        <% end %>
    <% end %>

<% end %>


