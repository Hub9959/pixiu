<% @title='Log in' %>

<%= bootstrap_form(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.error_messages %>
    <%= f.fieldset do %>
        <%= f.legend(@title) %>

        <%= f.group do %>
            <%= f.label :login %>
            <%= f.name_field :login, autofocus: true %>
        <% end %>
        <%= f.group do %>
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: 'off' %>
        <% end %>

        <% if devise_mapping.rememberable? -%>
            <%= f.group do %>
                <%= f.check_box_group do %>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, mode: 'checkbox' %>
                <% end %>
            <% end %>
        <% end -%>

        <%= f.button_group do %>
            <%= f.submit 'Log in' %>
            <%= render 'devise/shared/links' %>
        <% end %>
    <% end %>
<% end %>


