<% @title='Resend confirmation instructions' %>

<%= bootstrap_form(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.fieldset do %>
        <%= f.error_messages %>
        <%= f.legend(@title) %>

        <%= f.group do %>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true %>
        <% end %>
        <%= f.button_group do %>
            <%= f.submit 'Resend confirmation instructions' %>
            <%= render 'devise/shared/links' %>
        <% end %>
    <% end %>
<% end %>

